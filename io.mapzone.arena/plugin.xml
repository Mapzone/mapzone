<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            brandingId="io.mapzone.arena.branding"
            class="org.polymap.rhei.batik.BatikApplication"
            id="io.mapzone.arena.entrypoint"
            path="/arena">
      </entrypoint>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            body="resources/html/body.html"
            id="io.mapzone.arena.branding"
            themeId="org.polymap.rhei.batik.materialDesign"
            title="Arena">
         <additionalHeaders>
            <link
                  href="batikres/css/md/flowtext.css"
                  rel="stylesheet">
            </link>
            <link
                  href="batikres/css/roboto.css"
                  rel="stylesheet">
            </link>
         </additionalHeaders>
      </branding>
   </extension>
   <extension
         point="org.eclipse.rap.ui.themes">
      <themeContribution
            file="resources/css/arena.css"
            themeId="org.polymap.rhei.batik.materialDesign">
      </themeContribution>
   </extension>
   <extension
         point="org.polymap.rhei.batik.design">
      <design
            class="org.polymap.p4.P4AppDesign"
            id="org.polymap.arena.design"
            servletNameMatcher="/arena">
      </design>
   </extension>
   <extension
         point="org.polymap.rhei.batik.panels">
      <panel
            class="io.mapzone.arena.share.ui.SharePanel"
            id="io.mapzone.arena.share.ui.SharePanel"
            stackPriority="90">
      </panel>
      <panel
            class="io.mapzone.arena.share.ui.ShareletPanel"
            id="sharelet">
      </panel>
      <panel
            class="io.mapzone.arena.StackExchangeHelpDashlet$StackExchangePanel"
            id="io.mapzone.arena.StackExchangePanel">
      </panel>
   </extension>
   <extension
         point="org.polymap.core.catalog.catalogProviders">
      <catalogProvider
            class="io.mapzone.arena.csw.catalog.CswCatalogProvider">
      </catalogProvider>
   </extension>
   <extension
         point="org.polymap.core.catalog.resolverProviders">
      <resolver
            class="io.mapzone.arena.csw.catalog.MapzoneResolverProvider">
      </resolver>
   </extension>
   <extension
         point="org.polymap.core.operation.concerns">
      <concern
            class="io.mapzone.arena.csw.catalog.NewLayerOperationConcern"
            id="io.mapzone.arena.concern1">
      </concern>
   </extension>
   <extension
         point="org.polymap.rhei.batik.contributions">
      <contributions
            class="io.mapzone.arena.StackExchangeHelpContribution"
            id="io.mapzone.arena.StackExchangeHelpContribution">
      </contributions>s">
      <contributions
            class="io.mapzone.arena.EMailHelpContribution"
            id="io.mapzone.arena.EMailHelpContribution">
      </contributions>
   </extension>
</plugin>
